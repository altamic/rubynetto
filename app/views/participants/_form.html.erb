<% form_for @participant do |f| %>
  <p>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone, "Telefono" %>
    <%= f.text_field :phone %>
    <br />
  </p>

  <p><%= f.submit "Invia" %></p>
<% end %>
